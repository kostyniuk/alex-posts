  <h1 class="text-4xl font-bold mb-4 text-[--text]">
    {props.title}
  </h1>
  
  <div class="flex items-center gap-4 text-sm text-gray-400 mb-4">
    <time datetime={props.publishDate}>
      {formattedDate} üìÖ
    </time>
    <span>‚Ä¢</span>
    <span>{props.readingTime} ‚è±Ô∏è</span>
  </div>
  
  {props.description && (
    <p class="text-lg text-gray-300 leading-relaxed">
      {props.description}
    </p>
  )}
  
  {props.tags && props.tags.length > 0 && (
    <div class="flex flex-wrap gap-2 mt-4">
      {props.tags.map(tag => (
        <span class="px-3 py-1 bg-article-pink-400 text-article-pink-900 text-sm font-medium rounded-full">
          {tag}
        </span>
      ))}
    </div>
  )}
