---
import { formatDate } from '../utils/articles';

export interface Props {
  title: string;
  publishDate: string;
  description?: string;
  readingTime: string;
  tags?: string[];
}

const props: Props = Astro.props;
const formattedDate = formatDate(props.publishDate, 'long');
---

