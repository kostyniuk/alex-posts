---
import { readFileSync } from 'node:fs';
import { readdir } from 'node:fs/promises';
import { fileURLToPath } from 'node:url';
import path from 'node:path';
import ArticleMeta from '../../components/ArticleMeta.astro';
import { getArticleMetadata } from '../../utils/articles';

export async function getStaticPaths() {
  const htmlDir = fileURLToPath(new URL('../../html-articles', import.meta.url));
  const files = await readdir(htmlDir);

  return files.map(filename => {
    const slug = path.basename(filename, '.html');
    const filePath = path.join(htmlDir, filename);
    const htmlContent = readFileSync(filePath, 'utf-8');

    // Get metadata using the helper function
    const metadata = getArticleMetadata(slug);

    return {
      params: { article: slug },
      props: { htmlContent, metadata },
    };
  });
}

const { htmlContent, metadata } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{metadata.title} - Alex Posts </title>
		<meta name="description" content={metadata.description} />
		<link rel="stylesheet" href="/src/styles/global.css" />
	</head>
	<body>
		<main class="mx-auto max-w-2xl px-5 py-12 text-[--text]">
			<a href="/" class="inline-flex items-center gap-2 text-gray-600 dark:text-gray-400 hover:text-article-pink-500 transition-colors duration-200 mb-6 group">
				<svg class="w-4 h-4 transition-transform duration-200 group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
				</svg>
				Back to Home
			</a>
			
			<ArticleMeta
				title={metadata.title}
				publishDate={metadata.publishDate}
				description={metadata.description}
				readingTime={metadata.readingTime}
				tags={metadata.tags}
			/>
			
			<article set:html={htmlContent} class="prose prose-lg max-w-none prose-headings:text-[--text] prose-p:text-gray-700 dark:prose-p:text-gray-300" />
		</main>
	</body>
</html>
