---
import { readFileSync } from 'node:fs';
import { readdir } from 'node:fs/promises';
import { fileURLToPath } from 'node:url';
import path from 'node:path';
import ArticleMeta from '../../components/ArticleMeta.astro';
import { getArticleMetadata } from '../../utils/articles';
import '../../styles/global.css';

export async function getStaticPaths() {
  const htmlDir = path.join(process.cwd(), 'public/html-articles');
  const files = await readdir(htmlDir);

  return files.map(filename => {
    const slug = path.basename(filename, '.html');
    const filePath = path.join(htmlDir, filename);
    const htmlContent = readFileSync(filePath, 'utf-8');

    // Get metadata using the helper function
    const metadata = getArticleMetadata(slug);

    return {
      params: { article: slug },
      props: { htmlContent, metadata },
    };
  });
}

const { htmlContent, metadata } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{metadata.title} - Alex Posts </title>
		<meta name="description" content={metadata.description} />

	</head>
    <body>
		{metadata.fullScreen ? (
			<!-- Full-screen iframe layout -->
			<div class="h-screen flex flex-col">
				<!-- Header with back button -->
                <header class="bg-white/5 backdrop-blur-md border-b border-gray-700 p-4">
					<a href="/" class="inline-flex items-center gap-2 text-gray-400 hover:text-article-pink-400 transition-colors duration-200 group">
						<svg class="w-4 h-4 transition-transform duration-200 group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
						</svg>
						Back to Home
					</a>
				</header>
				
				<!-- Full-screen iframe -->
				<main class="flex-1">
					<article set:html={htmlContent} class="h-full" />
				</main>
			</div>
        ) : (
			<!-- Regular article layout -->
            <main class="relative mx-auto max-w-2xl px-5 py-12 text-[--text]">
                <div aria-hidden="true" class="pointer-events-none absolute inset-0 -z-10 overflow-hidden">
                    <div class="absolute -top-24 -left-32 h-[28rem] w-[28rem] rounded-full blur-3xl opacity-30"
                        style="background: radial-gradient(closest-side, rgba(236,72,153,0.35), transparent);"></div>
                    <div class="absolute -top-12 -right-24 h-[26rem] w-[26rem] rounded-full blur-3xl opacity-25"
                        style="background: radial-gradient(closest-side, rgba(59,130,246,0.35), transparent);"></div>
                    <div class="absolute -bottom-24 left-1/2 h-[30rem] w-[30rem] rounded-full blur-3xl opacity-20"
                        style="background: radial-gradient(closest-side, rgba(34,197,94,0.35), transparent);"></div>
                </div>
				<a href="/" class="inline-flex items-center gap-2 text-gray-400 hover:text-article-pink-500 transition-colors duration-200 mb-6 group">
					<svg class="w-4 h-4 transition-transform duration-200 group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
					</svg>
					Back to Home
				</a>
				
				<ArticleMeta
					title={metadata.title}
					publishDate={metadata.publishDate}
					description={metadata.description}
					readingTime={metadata.readingTime}
					tags={metadata.tags}
				/>
				
                <article set:html={htmlContent} class="prose prose-lg max-w-none prose-headings:text-[--text] prose-p:text-gray-300" />
			</main>
		)}
	</body>
</html>
