---
import SocialLinks from '../components/SocialLinks.astro';
import '../styles/global.css';

const platformUsernameMap = {
  github: "kostyniuk",
  linkedin: "kostyniuk",
  twitter: "costiniuc00",
  instagram: "costiniuc00",
};
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>About Me</title>

	</head>
	<body>
		<main class="mx-auto max-w-2xl px-5 py-12 text-[--text]">
            <a href="/" class="inline-flex items-center gap-2 text-gray-400 hover:text-article-pink-500 transition-colors duration-200 mb-6 group">
                <svg class="w-4 h-4 transition-transform duration-200 group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Back to Home
            </a>
			<h1 class="text-4xl font-bold mb-8">About Me</h1>
			
			<div class="prose prose-invert">
				<p class="text-lg mb-8">
					Hi! I'm Alex. I'm a software developer passionate about building great web experiences and sharing what I learn along the way.
				</p>

				<div class="flex flex-col gap-4 text-lg">
					<p>Connect with me on social media:</p>
					
					<SocialLinks platformUsernameMap={platformUsernameMap} />
				</div>
			</div>
		</main>
	</body>
</html>
